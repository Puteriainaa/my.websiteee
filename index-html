<!-- Tambahkan bahagian Experience, Family, Gallery di sini -->
<script>
const wavyText = document.querySelector('.wavy');
const text = wavyText.textContent;
wavyText.textContent = '';

text.split('').forEach((char, index) => {
const span = document.createElement('span');
span.textContent = char;
span.style.animationDelay = `${index * 0.1}s`;
wavyText.appendChild(span);
});

const homeAudio = document.getElementById('homeAudio');
function showSection(id, btn) {
document.querySelectorAll('.section').forEach((sec) => sec.classList.remove('active'));
document.getElementById(id).classList.add('active');
document.querySelectorAll('.tab').forEach((tab) => tab.classList.remove('active'));
if (btn) btn.classList.add('active');
if (id === 'home') {
homeAudio.play().catch(() => {});
} else {
homeAudio.pause();
homeAudio.currentTime = 0;
}
}
window.addEventListener('DOMContentLoaded', () => {
if (document.getElementById('home').classList.contains('active')) {
homeAudio.play().catch(() => {});
}
});

  // Hentikan semua audio sebelum mainkan yang baru
    function playAudio(id) {
      // Ambil semua elemen audio
      const audios = document.querySelectorAll('audio');

      // Henti dan reset semua audio
      audios.forEach(audio => {
        audio.pause();
        audio.currentTime = 0;
      });

      // Mainkan audio yang diminta
      const targetAudio = document.getElementById(id);
      targetAudio.play();
    }
    
</script>
</body>
</html>
